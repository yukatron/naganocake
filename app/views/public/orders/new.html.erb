<div class="body">
	<div class="container">
		<%= render 'layouts/error_messages', hoge: @order %>

		<div class="row">
			<div class="col-xs-offset-1 col-xs-11">
				<h3 class="page-header pull-left">注文情報入力</h3>
			</div>
		</div>

		<div class="row">
			<div class="form justify col-xs-offset-2">
			<%= form_with(model: @order, url: order_confirm_path, method: :post) do |f| %>
			<div class="form-group">
				<label><span class="glyphicon glyphicon-stop"></span>支払い方法</label>
				<div class="radio col-xs-offset-1 col-xs-11">
					<label><%= f.radio_button :payment_method, '0' %>クレジットカード</label><br />
					<label><%= f.radio_button :payment_method, '1' %>銀行振込</label>
				</div>
			</div>

			<div class="form-group">
				<label><span class="glyphicon glyphicon-stop"></span>お届け先</label>

				<!-- Customerテーブルから自身の住所 -->
				<div class="radio col-xs-offset-1 col-xs-11">
					<label>
						<%= f.radio_button :address, 'customerAdd' %>
						ご自身の住所<br /><%= current_customer.postal_code %>  <%= current_customer.address %><br><%= current_customer.last_name %> <%= current_customer.first_name %>
					</label>
				</div><br>

				<!-- Addressテーブルから登録済み住所 -->
				<div class="radio col-xs-offset-1 col-xs-11">
					<label>
						<%= f.radio_button :address, 'Add' %>
						登録済住所から選択<div class="input-group"><%= f.collection_select :address, current_customer.addresses, :id, :address, prompt: true %></div>
					</label>
				</div><br />

				<!-- 新規で新しい住所 -->
				<div class="radio col-xs-offset-1 col-xs-11">
					<label>
						<%= f.radio_button :address, 'newAdd' %>新しいお届け先<br>
					</label>
				</div>

			</div>

			<div class="actions col-xs-10 block-center">
				<%= f.submit "確認画面へ進む", class:"btn btn-primary btn-block" %>
			</div>

			<% end %>
			</div>
		</div>
	</div>
</div>