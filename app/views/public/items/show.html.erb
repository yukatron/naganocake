<section class="items">
	<%= render 'layouts/error_messages', hoge: @cart_item %>
  <div class="container">
  	<p id="notice"><%= notice %></p>
          <%= render 'genre_search.html.erb', genres: @genres %>

		<div class="col-xs-10">
				<div class="col-xs-5">
					<%= attachment_image_tag @item, :image, format: 'jpeg', fallback:"no_image.jpg", size: '127x89', class:"img-responsive center-block" %>
				</div>
				<div class="col-xs-7">
		            <div class="wrapper-title">
			            <h3><%= @item.name %></h3>
		            </div>

		            <div class="wrapper-body" style="height:10em;">
			            <%= @item.introduction %>
		            </div>

		            <div class="wrapper-body" style="height:4em;">
			            <p><strong>¥<%= tax_added_currency(@item.price, 1.1) %> (税込)</strong></p>
		            </div>

		            <div class="row">
		            		<%= form_with(model: @cart_item, url: cart_items_path, method: :post) do |f| %>
		            			<div class="col-xs-2">
		            				<%= f.hidden_field :item_id, :value => @item.id %>
		            				<%= f.text_field :quantity, class:"form-control", placeholder:"1" %>
		            			</div>
		            			<div class="col-xs-3">
		            			<%= f.submit "カートに入れる", class:"btn btn-primary" %></div>
		            		<% end %>

		            </div>
	        	</div>
	   	</div>
	</div>
</section>