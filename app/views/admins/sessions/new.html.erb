<section class="slice slice-lg sct-color-1">
  <div class="container">
    <div class="row">
      <div class="col-md-5 col-md-offset-3">
        <div class="form-header text-left">
          <h5 class="form-header-title">管理者ログイン</h5>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">

            <div class="form-horizontal">

              <%= form_for(resource, as: resource_name, url: admin_session_path(resource_name)) do |f| %>
                <div class="form-group has-icon">
                  <%= f.label :email, class: "col-sm-3 control-label" %><div class="col-sm-9">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></div>
                </div>

                <div class="form-group has-icon">
                  <%= f.label :password, class: "col-sm-3 control-label" %><div class="col-sm-9">
                  <%= f.password_field :password, autocomplete: "off", class: "form-control" %></div>
                </div>

                <div class="form-group"><div class="col-sm-offset-3 col-sm-9">
                  <%= f.submit "ログイン", class: "btn btn-primary" %></div>
                </div>
              <% end %>
            </div>

      </div>
    </div>
  </div>
</section>