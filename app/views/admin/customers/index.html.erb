<div class="body">
	<div class="container">
		<p id="notice"><%= notice %></p>
		<div class="row">
			<div class="page-header">
				<h3>会員一覧</h3>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-10">
				<table class="table table-hover">
					<thead>
						<tr class="active">
							<th>会員ID</th>
							<th>氏名</th>
							<th>メールアドレス</th>
							<th>退会ステータス</th>
						</tr>
					</thead>
					<tbody>
						<% @customers.each do |customer| %>
							<tr>
							 	<td><%= customer.id %></td>
							 	<td><%= link_to admin_customer_path(customer.id) do %>
							 		<%= customer.last_name %><%= customer.first_name %>
							 		<% end %>
							 	</td>
							 	<td><%= customer.email %></td>
							 	<td><% if customer.is_deleted == true %>退会済み
							 		<% else %> 無効<% end %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
				<%= paginate @customers %>
			</div>
		</div>
	</div>
</div>