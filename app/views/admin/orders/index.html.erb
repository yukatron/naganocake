<div class="body">
	<div class="container">
		<p id="notice"><%= notice %></p>
		<div class="row">
			<div class="page-header">
				<h3>注文履歴一覧</h3>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-10">
				<table class="table table-hover">
					<thead>
						<tr class="active">
							<th>購入日時</th>
							<th>購入者</th>
							<th>注文個数</th>
							<th>注文ステータス</th>
						</tr>
					</thead>
					<tbody>
						<% @orders.each do |order| %>
							<tr>
							 	<td><%= link_to l(order.created_at), admin_order_path(order.id) %></td>
							 	<td><%= order.customer.last_name %><%= order.customer.first_name %>
							 	</td>
							 	<td><% @quantity = 0 %>
							 		<% order.order_details.each do |ordered_item| %>
							 		<% @quantity += ordered_item.quantity %>
							 		<% end %>
							 		<%= @quantity %>
							 	</td>
							 	<td><%= order.status %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
				<%= paginate @orders %>
			</div>
		</div>
	</div>
</div>