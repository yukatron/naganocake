<div class="body">
	<div class="container">
		<%= render 'layouts/error_messages', hoge: @genre %>
		<div class="row">
			<div class="page-header">
				<h3>ジャンル一覧・追加</h3>
			</div>
		</div>

	    <div class="row">
	        <div class="col-xs-10 text-center">
	    		<%= form_for(@genre, url: admin_genres_path) do |f| %>
	    		<div class="form-inline">
		            <div class="form-group" style="margin-right: 1em;">
		            	<%= f.label :name, "ジャンル名"%>
		            	<%= f.text_field :name %>
		            </div>
		            <div class="form-group" style="margin-right: 1em;">
		            	<%= f.radio_button :is_active, :true, checked: true %>
		            	<%= f.label :is_active, "有効", value: :true %>
		            	<%= f.radio_button :is_active, :false %>
		            	<%= f.label :is_active, "無効", value: :false %>
		            </div>
		            <div class="form-group">
		            	<%= f.submit "追加", class:"btn btn-primary" %>
		            </div>
		        </div>
    			<% end %>
    		</div>
    	</div><br />

    	<div class="row">
      		<div class="col-xs-10">
	        	<table class="table">
	        		<thead>
	        			<tr>
	        				<th>ジャンル</th>
	        				<th>状態</th>
	        				<th colspan="3"></th>
	        			</tr>
	        		</thead>
	        		<tbody>
	        			<% @genres.each do |genre| %>
	        			<tr>
	        				<td><%= genre.name %></td>
	        				<td><% if genre.is_active == true %>
	        					<p>有効</p>
	        					<% else %>
	        					<p>無効</p>
	        					<% end %>
	        				</td>
	        				<td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-primary" %></td>
	        			</tr>
	        			<% end %>
	        		</tbody>
	        	</table>
      		</div>
      	</div><br />
  	</div>
</div>